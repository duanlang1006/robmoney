<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="start"
        android:paddingBottom="@dimen/rob_record_item_padding_size"
        android:paddingEnd="@dimen/rob_record_item_padding_size"
        android:paddingTop="@dimen/rob_record_item_padding_size">

        <ImageView
            android:id="@+id/rob_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rob_detail_weixin" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_type"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingBottom="@dimen/rob_record_item_padding_size"
        android:paddingEnd="@dimen/rob_record_item_padding_size"
        android:paddingTop="@dimen/rob_record_item_padding_size">

        <TextView
            android:id="@+id/rob_name"
            style="@style/rob_detail_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名" />

        <TextView
            android:id="@+id/rob_time"
            style="@style/rob_detail_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="start"
        android:paddingBottom="@dimen/rob_record_item_padding_size"
        android:paddingEnd="@dimen/rob_record_item_padding_size">

        <TextView
            android:id="@+id/rob_size"
            style="@style/rob_detail_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额" />
    </LinearLayout>
</RelativeLayout>