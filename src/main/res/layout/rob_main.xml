<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf6f1"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_action_bar_placeholder"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/textView"
        android:background="#d65645" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:background="@mipmap/bg_action_bar"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/rob_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fee1b4"
        android:textSize="@dimen/rob_button_text_size" />

    <ImageView
        android:id="@+id/rob_settings"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignRight="@+id/textView"
        android:layout_below="@+id/main_action_bar_placeholder"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:onClick="openSettings"
        android:padding="10dp"
        android:src="@mipmap/ic_settings" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logo" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:text="guide" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:text="setdivice" />

</RelativeLayout>
